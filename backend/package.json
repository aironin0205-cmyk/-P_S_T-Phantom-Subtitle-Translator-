// ===== PACKAGE.JSON =====
{
  "name": "pst-backend",
  "version": "1.0.0",
  "description": "The AI engine for the Phantom Subtitle Translator platform.",
  "main": "src/server.js",
  "type": "module",
  "private": true,
  "author": "Your Name or Company Name",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "your-new-github-repository-url.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js | pino-pretty",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#core/*": "./src/core/*",
    "#features/*": "./src/features/*",
    "#services/*": "./src/services/*",
    "#middleware/*": "./src/middleware/*",
    "#utils/*": "./src/utils/*"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@google/generative-ai": "^0.12.0",
    "@pinecone-database/pinecone": "^2.2.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.27.0",
    "fastify-type-provider-zod": "^1.1.9",
    "mongodb": "^6.7.0",
    "pino": "^9.1.0",
    "srt-parser-2": "^1.1.7",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pino-pretty": "^11.1.0",
    "prettier": "^3.3.1",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js",
      "!src/config/**"
    ],
    "transform": {},
    "nodeOptions": {
      "experimental-vm-modules": true
    }
  }
}
